<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <com.zhiduan.crowdclient.view.XCRoundRectImageView
                android:id="@+id/item_finish_iv_logo"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/male" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_finish_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textSize="14sp"
                        android:text="张珊" />

                    <ImageView
                        android:id="@+id/item_finish_iv_sex"
                        android:layout_width="23dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_boy"
                        android:layout_marginLeft="3dp"
                         />

                    <ImageView
                         android:layout_width="23dp"
                        android:layout_height="wrap_content"
                         android:layout_marginLeft="3dp"
                         android:src="@drawable/homepage_send"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_finish_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:text="1357854230" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                 android:id="@+id/item_finish_tv_number"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:text="订  单  号：213213" />
<LinearLayout 
    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:text="收入金额：" />
            <TextView
                android:id="@+id/item_finish_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#ff0000"
                android:text="￥8.0" />
            </LinearLayout>
            <TextView
                android:id="@+id/item_finish_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="寄件时间：2016-8-15 16:37:45" />
            <TextView
                android:id="@+id/item_finish_tv_express"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="快递公司：圆通" />


            <TextView
                android:id="@+id/item_finish_tv_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                 android:layout_marginBottom="10dp"
                android:text="地        址：202" />
        </LinearLayout>
        
        
         <ImageView
             
             android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/completed" />
    </RelativeLayout>
<View 
     android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#eeeeee"
    />
</LinearLayout>