<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
     android:background="@drawable/dialog_grey_password"
    android:orientation="vertical" >



        <TextView
            android:id="@+id/password_error_tv_content"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="密码错误，您还可以输入2次"
            android:gravity="center"
            android:textColor="#1d1d26"
            android:textSize="16sp" />
   <ImageView 
        android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#e5e5e5"
       />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="40dp"
     android:orientation="horizontal"
    >
    
    
    <TextView
        android:id="@+id/password_error_tv_forgetpassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="忘记密码"
            android:textColor="#1681fe"
            android:gravity="center"
            android:textSize="18sp" />
    <ImageView 
        android:id="@+id/password_error_iv_xian"
        android:layout_width="1dp"
       android:layout_height="match_parent"
       android:background="#e5e5e5"
       />
    <TextView
        android:id="@+id/password_error_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#1681fe"
            android:gravity="center"
            android:textSize="18sp" />
</LinearLayout>
</LinearLayout>