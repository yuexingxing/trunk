<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:id="@+id/rl_remark"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_radius_white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="报告详情"
                android:textColor="@color/gray_1"
                android:textSize="18dp" />
        </RelativeLayout>

        <View
            android:id="@+id/dialog_title_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/dialog_title"
            android:background="@color/gray_line" />

        <LinearLayout
            android:id="@+id/ll_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_dialog_single_ok"
            android:layout_below="@+id/dialog_title_line"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_margin="4dp"
                android:id="@+id/tv_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:textColor="@color/text_black"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dialog_single_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_valid"
            android:gravity="center"
            android:text="点击关闭"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>