<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <com.zhiduan.crowdclient.view.ClearEditText
            android:id="@+id/old_password_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#00000000"
            android:digits="@string/psd_digits"
            android:gravity="center_vertical"
            android:hint="请输入原密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="30"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/gray_back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <com.zhiduan.crowdclient.view.ClearEditText
            android:id="@+id/new_password_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#00000000"
            android:digits="@string/psd_digits"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="30"
            android:singleLine="true"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/imb_password_update_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:onClick="showNewPwd"
            android:src="@drawable/img_psd_close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <com.zhiduan.crowdclient.view.ClearEditText
                android:id="@+id/repeat_new_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#00000000"
                android:digits="@string/psd_digits"
                android:gravity="center_vertical"
                android:hint="请确认新密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="30"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/imb_password_update_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="#ffffff"
                android:onClick="showRepeat"
                android:src="@drawable/img_psd_close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray_line" />
    </LinearLayout>
 </LinearLayout>
    <Button
        android:id="@+id/update_password_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/register_valid_gray"
        android:clickable="false"
        android:padding="10dp"
        android:text="确定修改"
        android:textColor="#ffffff" />

</LinearLayout>