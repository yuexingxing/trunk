<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/item_order_wait_layout_sms"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="invisible" >

        <Button
            android:id="@+id/item_order_abnormal_back"
            android:layout_width="73dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_radius_gray_round"
            android:text="退件"
            android:textColor="@color/text_black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|right" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="审核处理中"
            android:textColor="@color/main_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/include_order_wati_2_revoke"
            android:layout_width="73dp"
            android:layout_height="28dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/selector_order_gray"
            android:text="撤销申诉"
            android:textColor="@color/text_point"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>