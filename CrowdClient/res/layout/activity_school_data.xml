<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_5"
    android:orientation="vertical"
    tools:context=".SchoolDataActivity" >

    <ImageView
        android:id="@+id/iv_school_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/register_authentication_school" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/tv_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="大学校区" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_school_name"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/iv_error_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/iv_area_line"
                    android:src="@drawable/error_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_area_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/wallet_arrow" />

                <TextView
                    android:id="@+id/tv_school_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_error_area"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_4" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/rl_school_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/tv_title_school_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="学校地址" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_title_school_address"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/iv_error_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/iv_address_line"
                    android:src="@drawable/error_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_address_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/wallet_arrow" />

                <TextView
                    android:id="@+id/tv_school_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_error_address"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_4" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/rl_dormitory_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/tv_school_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="宿舍地址" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_school_area"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/iv_dormitory_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/wallet_arrow" />

                <ImageView
                    android:id="@+id/iv_error_dormitory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_dormitory_line"
                    android:src="@drawable/error_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_dormitory_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_error_dormitory"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_4" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/dormitory_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/gray_5" />

        <EditText
            android:id="@+id/edt_invite_code"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:hint="请输入小派邀请码(选填)"
            android:paddingLeft="10dp"
            android:textColor="@color/text_hint"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_5" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_reward_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_4"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/register_valid_gray"
        android:clickable="false"
        android:text="提交"
        android:textColor="@color/white" />

</LinearLayout>