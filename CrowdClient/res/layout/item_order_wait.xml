<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_waittaking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_background" />

    <LinearLayout
        android:id="@+id/item_order_wait_layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/item_order_wait_layout_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12dp" >

                <ImageView
                    android:id="@+id/item_order_wait_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tabbar_circle" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_order_wait_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_point"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/item_order_wait_img_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/orders_turn" />

            <ImageView
                android:id="@+id/item_order_wait_img_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/homepage_system_dis" />

            <ImageView
                android:id="@+id/item_order_wait_img_buildFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/home_loudong" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f7f7f7"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/item_order_wait_icon"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/icon_order_list" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_order_wait_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:text="蓝小月"
                        android:textColor="@color/text_gray3"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/item_order_wait_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/profile_boy" />

                    <TextView
                        android:id="@+id/item_order_wait_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="5dp"
                        android:paddingRight="12dp"
                        android:text="¥0"
                        android:textColor="@color/main_color"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_item_order_wait_useraddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_order_wait_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:text="@string/takerId"
                        android:textColor="@color/text_gray3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/item_order_wait_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="7897456546"
                        android:textColor="@color/text_gray3"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_order_wait_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:text="配送地址: "
                        android:textColor="@color/text_gray3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/item_order_wait_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="上海大学宿舍楼1B-305"
                        android:textColor="@color/text_gray3"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_item_order_wait_getaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_order_wait_title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:text="送达时间: "
                        android:textColor="@color/text_gray3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/item_order_wait_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="2017-11-12 15:00-17:00"
                        android:textColor="@color/text_gray3"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_order_wait_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:text="额外奖励100经验值"
                        android:textColor="@color/main_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_order_wait_include_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include layout="@layout/include_order_wait_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_order_wait_include_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include layout="@layout/include_order_wait_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_order_wait_include_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include layout="@layout/include_order_wait_3" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>