<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invite_pop_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" >

    <LinearLayout
        android:id="@+id/ll_invite_dialog"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4" >

            <ImageView
                android:id="@+id/tv_share_qq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:src="@drawable/qq"
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/tv_friends_circle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:src="@drawable/circle_of_friends"
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/tv_share_wx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:src="@drawable/wechat_friends"
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/tv_share_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:src="@drawable/sms"
                android:textColor="@color/red" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background_gray" />

        <TextView
            android:id="@+id/tv_btn_cancel_share"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="取消分享"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="@color/crop__button_text" />
    </LinearLayout>

</RelativeLayout>