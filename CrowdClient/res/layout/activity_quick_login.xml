<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_quick_login_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/shape_radius_abnormal_gray"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.zhiduan.crowdclient.view.ClearEditText
                    android:id="@+id/quick_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="5dp"
                    android:background="#00ffffff"
                    android:hint="手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/shape_radius_abnormal_gray"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.zhiduan.crowdclient.view.ClearEditText
                    android:id="@+id/edt_number_register"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:background="#00ffffff"
                    android:gravity="center_vertical"
                    android:hint="请输入手机验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/gray_4"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_number_register"
                    android:layout_width="90dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/gray_1"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/quick_login_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/register_valid"
            android:text="登录"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击确定表示同意" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ea3f4f"
            android:onClick="readDeal"
            android:text="爱学派《用户使用协议》" />
    </LinearLayout>

</LinearLayout>