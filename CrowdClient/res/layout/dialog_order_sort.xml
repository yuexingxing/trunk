<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="horizontal" >

    <View
        android:id="@+id/layout_order_sort_top"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#50000000" >
    </View>

    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_sort_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="right|top"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/layout_sort_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:orientation="vertical" >

                        <!-- 时间，价格选择 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >

                                    <TextView
                                        android:id="@+id/textView1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginTop="10dp"
                                        android:text="价格与时间 (单选)"
                                        android:textColor="@color/text_gray3"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="14dp"
                                    android:gravity="center_horizontal" >

                                    <CheckBox
                                        android:id="@+id/order_sort_1"
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/selector_order_sort"
                                        android:button="@null"
                                        android:gravity="center"
                                        android:text="从高到低"
                                        android:textColor="@color/text_point"
                                        android:textSize="13sp" />

                                    <CheckBox
                                        android:id="@+id/order_sort_2"
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="12dp"
                                        android:background="@drawable/selector_order_sort"
                                        android:button="@null"
                                        android:gravity="center"
                                        android:text="从低到高"
                                        android:textColor="@color/text_point"
                                        android:textSize="13sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal" >

                                    <CheckBox
                                        android:id="@+id/order_sort_3"
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/selector_order_sort"
                                        android:button="@null"
                                        android:gravity="center"
                                        android:text="从早到晚"
                                        android:textColor="@color/text_point"
                                        android:textSize="13sp" />

                                    <CheckBox
                                        android:id="@+id/order_sort_4"
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="12dp"
                                        android:background="@drawable/selector_order_sort"
                                        android:button="@null"
                                        android:gravity="center"
                                        android:text="从晚到早"
                                        android:textColor="@color/text_point"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/gray_line" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="10dp"
                                    android:text="性别 (多选)"
                                    android:textColor="@color/text_gray3"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="14dp"
                                android:gravity="center_horizontal" >

                                <CheckBox
                                    android:id="@+id/order_sort_5"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/selector_order_sort"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="男"
                                    android:textColor="@color/text_point"
                                    android:textSize="13sp" />

                                <CheckBox
                                    android:id="@+id/order_sort_6"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="12dp"
                                    android:background="@drawable/selector_order_sort"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="女"
                                    android:textColor="@color/text_point"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/gray_line" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="10dp"
                                    android:text="人数 (多选)"
                                    android:textColor="@color/text_gray3"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="14dp"
                                android:gravity="center_horizontal" >

                                <CheckBox
                                    android:id="@+id/order_sort_7"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/selector_order_sort"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="单人"
                                    android:textColor="@color/text_point"
                                    android:textSize="13sp" />

                                <CheckBox
                                    android:id="@+id/order_sort_8"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="12dp"
                                    android:background="@drawable/selector_order_sort"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="多人"
                                    android:textColor="@color/text_point"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/gray_line" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="10dp"
                                    android:text="按照分类 (多选)"
                                    android:textColor="@color/text_gray3"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="14dp"
                                android:gravity="center_horizontal" >

                                <CheckBox
                                    android:id="@+id/order_sort_9"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/selector_order_sort"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="快递"
                                    android:textColor="@color/text_point"
                                    android:textSize="13sp" />

                                <CheckBox
                                    android:id="@+id/order_sort_10"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="12dp"
                                    android:background="@drawable/selector_order_sort"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="跑腿"
                                    android:textColor="@color/text_point"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="12dp"
                                android:gravity="center_horizontal" >

                                <CheckBox
                                    android:id="@+id/order_sort_12"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/selector_order_sort"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="商品"
                                    android:textColor="@color/text_point"
                                    android:textSize="13sp" />

                                <CheckBox
                                    android:id="@+id/order_sort_11"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="12dp"
                                    android:background="@drawable/selector_order_sort"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="任务"
                                    android:textColor="@color/text_point"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/order_sort_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/button_bg"
                    android:gravity="center"
                    android:text="重置"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/order_sort_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_color"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>