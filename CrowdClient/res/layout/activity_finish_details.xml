<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/finish_details_tv_ji_shou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/detail_yuan_ji"
                android:gravity="center"
                android:text="寄"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/finish_details_tv_ji_shou"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/finish_details_tv_ji_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓        名："
                        android:textColor="#222222"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/finish_details_iv_ji_sex"
                        android:layout_width="23dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/profile_boy" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/finish_details_tv_ji_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="电        话："
                        android:textColor="#222222"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:onClick="phone"
                        android:src="@drawable/list_telephone" />

                    <TextView
                        android:id="@+id/finish_details_tv_ji_phonenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#ea3f4f"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/finish_details_tv_ji_xiadantime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:text="下单时间："
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_details_tv_ji_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:text="地        址："
                    android:textColor="#222222"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/finish_details_tv_ji_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="17dp"
                android:text="已寄件"
                android:textColor="#ea3f4f"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@drawable/homepage_decorate" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/finish_details_tv_shou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/detail_yuan_shou"
                android:gravity="center"
                android:text="收"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/finish_details_tv_shou"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/finish_details_tv_shou_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓        名："
                        android:textColor="#222222"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/finish_details_tv_shou_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="电        话："
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_details_tv_shou_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:text="地        址："
                    android:textColor="#222222"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="揽件详情"
            android:textColor="#999999"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/finish_details_tv_waybill_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="运  单  号："
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/finish_details_tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="物品类型："
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/finish_details_tv_sender_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="寄件时间："
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/finish_details_tv_ordernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="订  单  号："
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/finish_details_tv_express_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="快递公司："
                android:textColor="#222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/finish_details_tv_sender_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="商户地址："
                android:textColor="#222222"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="费用差异"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/finish_details_tv_chayi"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="#ea3f4f"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d5d5d5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="项目"
                    android:textColor="#222222"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="实收"
                    android:textColor="#222222"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="实付"
                    android:textColor="#222222"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="差异"
                    android:textColor="#222222"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="重量（kg）"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/finish_details_tv_prepay_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/finish_details_tv_practical_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/finish_details_tv_difference_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="运费（元）"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/finish_details_tv_prepay_freight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/finish_details_tv_practical_freight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/finish_details_tv_difference_freight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d5d5d5" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="费用详情"
            android:textColor="#999999"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="50dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="快递费（预估）"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_details_tv_express_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="7dp"
                    android:text=""
                    android:textColor="#ea3f4f"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="取件赏金"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_details_tv_money_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="7dp"
                    android:text=""
                    android:textColor="#ea3f4f"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="#d5d5d5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/finish_details_tv_money_sum_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:text=""
                    android:textColor="#ea3f4f"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="1dp"
                    android:layout_toLeftOf="@id/finish_details_tv_money_sum_1"
                    android:text="合计"
                    android:textColor="#222222"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>