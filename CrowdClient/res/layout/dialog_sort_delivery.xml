<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_sort_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/transparent"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sort_2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#50000000"
        android:gravity="right|top"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_sort_dialog"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/order_sort_frame"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/order_screen_time" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="时间"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_dialog_sort_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:gravity="center|right" >

                    <Button
                        android:id="@+id/sort_time_1"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_radius_gray_round"
                        android:text="升序"
                        android:clickable="false"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_dialog_sort_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:gravity="center_vertical|right" >

                    <Button
                        android:id="@+id/sort_time_2"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_radius_gray_round"
                        android:text="降序"
                        android:clickable="false"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_6" />

            <LinearLayout
                android:id="@+id/layout_sort_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/list_address" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="地址"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_dialog_sort_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|right" >

                    <Button
                        android:id="@+id/sort_address_1"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_radius_gray_round"
                        android:text="升序"
                        android:clickable="false"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_dialog_sort_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|right" >

                    <Button
                        android:id="@+id/sort_address_2"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_radius_gray_round"
                        android:text="降序"
                        android:clickable="false"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/list_gender" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="性别"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_dialog_sort_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|right" >

                    <Button
                        android:id="@+id/sort_sex_1"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_radius_gray_round"
                        android:button="@null"
                        android:gravity="center"
                        android:text="男"
                        android:clickable="false"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_dialog_sort_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|right" >

                    <Button
                        android:id="@+id/sort_sex_2"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_radius_gray_round"
                        android:button="@null"
                        android:gravity="center"
                        android:text="女"
                        android:clickable="false"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50000000"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>