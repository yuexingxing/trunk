<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/sign_bg2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <com.zhiduan.crowdclient.view.ClearEditText
            android:id="@+id/et_pho_num"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="19dp"
            android:layout_weight="7"
            android:background="#ffffff"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
             android:textColor="@color/text_ababab"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="#e5e5e5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <com.zhiduan.crowdclient.view.ClearEditText
            android:id="@+id/et_et_yanzheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:layout_marginRight="20dp"
            android:inputType="number"
            android:maxLength="6"
             android:textColor="@color/text_ababab"
            android:textSize="14dp" />

        <Button
            android:id="@+id/time_password"
            android:layout_width="90dp"
            android:layout_height="23dp"
            android:layout_marginRight="19dp"
            android:background="@null"
            android:gravity="center"
            android:onClick="getVerCode"
            android:text="获取验证码"
            android:textColor="@color/gray_1"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/edit_sms_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/sign_bg2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <com.zhiduan.crowdclient.view.ClearEditText
            android:id="@+id/et_new_psw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#ffffff"
            android:digits="@string/psd_digits"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="30"
             android:textColor="@color/text_ababab"
            android:singleLine="true"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="showPwd"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/imb_password_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:src="@drawable/img_psd_close" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff" >

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="#e5e5e5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="15dp" >

        <com.zhiduan.crowdclient.view.ClearEditText
            android:id="@+id/et_new_repsw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#ffffff"
            android:digits="@string/psd_digits"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="30"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:textColor="#afafb0"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#e5e5e5" />

    <LinearLayout
        android:layout_width="347dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="347dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/register_valid_gray"
            android:clickable="false"
            android:onClick="ok"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>